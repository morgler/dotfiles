alias mongo_start='mongod run --config /usr/local/Cellar/mongodb/1.8.1-x86_64/mongod.conf --fork --logpath /tmp/mongodb.log'
alias mongo_repair='mongod run --repair --config /usr/local/Cellar/mongodb/1.8.1-x86_64/mongod.conf --logpath /tmp/mongodb.log'

alias sbld='sudo bluepill load config/bluepill/development.pill'
alias sblt='sudo bluepill load config/bluepill/test.pill'
alias sblj='sudo bluepill load config/bluepill/juggernaut.pill'
alias sbl='sblj; sbld; sblt'
alias sbsd='sudo bluepill ls_development status'
alias sbst='sudo bluepill ls_test status'
alias sbsj='sudo bluepill ls_juggernaut status'
alias sbs='sbsj; sbsd; sbst'
alias sbqd='sudo bluepill ls_development stop'
alias sbqt='sudo bluepill ls_test stop'
alias sbqj='sudo bluepill ls_juggernaut stop'
alias sbq='sbqj; sbqd; sbqt'
alias k9bpill='ps aux | grep bluepilld | grep -v grep | awk "{ print \$2 }" | xargs sudo kill -9'

alias lsstart='mongo_start; sbl; /opt/nginx/sbin/nginx; redis-server &'
alias lsstop='sbq; killall redis-server; killall mongod; killall nginx'

alias tts='touch tmp/specs'
alias ttf='touch tmp/features'
alias tta='touch tmp/specs_features'
alias begs='RAILS_ENV=test bundle exec guard start'

# RVM
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"
alias clear_rvm_cache="cd ~/.rvm; find . -name '*.gem' -exec rm {} \;"

